# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_JQL=order by created DESC

# WhatsApp Provider Selection
# Options: auto, twilio, meta, whatsapp-web
# "auto" will automatically detect based on available credentials
WHATSAPP_PROVIDER=auto

# Option 1: Twilio WhatsApp API (Easiest for testing - FREE sandbox)
# Sign up: https://www.twilio.com/try-twilio
# Get credentials: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886  # Twilio sandbox number (default)

# Option 2: Meta WhatsApp Business API (Official)
# Setup: https://developers.facebook.com/
WHATSAPP_TOKEN=your_whatsapp_business_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_API_VERSION=v18.0

# Option 3: WhatsApp Web (FREE - uses your personal WhatsApp)
# Requires whatsapp-web.js server running separately
# GitHub: https://github.com/pedroslopez/whatsapp-web.js
WHATSAPP_WEB_SERVER_URL=http://localhost:3000
WHATSAPP_WEB_API_KEY=optional_api_key_for_security
